# Soledgic Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================================================
# SUPABASE (Required)
# ============================================================================

# Your Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (safe for client-side)
SUPABASE_ANON_KEY=eyJ...your-anon-key

# Supabase service role key (server-side only, KEEP SECRET)
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key

# For Next.js client
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...your-anon-key

# ============================================================================
# CARD PROCESSOR (Required)
# ============================================================================

# Primary processor credentials (server-side only, KEEP SECRET)
FINIX_USERNAME=
FINIX_PASSWORD=

# sandbox or production
FINIX_ENV=sandbox

# Optional overrides
FINIX_BASE_URL=
FINIX_API_VERSION=2022-02-01

# Processor application + hosted onboarding forms
FINIX_APPLICATION_ID=
FINIX_ONBOARDING_FORM_ID=

# Hosted form for collecting an org billing method (can be the same as FINIX_ONBOARDING_FORM_ID if configured that way)
FINIX_BILLING_ONBOARDING_FORM_ID=

# ============================================================================
# BILLING (Usage-Based Overages)
# ============================================================================

# Platform merchant + destination used to charge overages (server-side only)
BILLING_MERCHANT_ID=
BILLING_DESTINATION_ID=

# ============================================================================
# STRIPE (Legacy, disabled by default)
# ============================================================================

# Set to 'true' only if you want to enable legacy Stripe endpoints.
ENABLE_STRIPE_LEGACY=false

# Stripe secret key (optional)
STRIPE_SECRET_KEY=sk_test_...

# Webhook secrets (optional)
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_BILLING_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# ============================================================================
# PLAID (Optional - for bank connections)
# ============================================================================

PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox  # sandbox, development, or production

# ============================================================================
# EMAIL (Optional - for notifications)
# ============================================================================

RESEND_API_KEY=re_...
FROM_EMAIL=noreply@soledgic.com

# ============================================================================
# SECURITY
# ============================================================================

# Secret for cron job authentication (health checks, cleanup)
CRON_SECRET=your-random-secret-here

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Set to 'development' for local, 'production' for deployed
NODE_ENV=development

# Local development port
PORT=3000
