# Soledgic Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================================================
# SUPABASE (Required)
# ============================================================================

# Your Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (safe for client-side)
SUPABASE_ANON_KEY=eyJ...your-anon-key

# Supabase service role key (server-side only, KEEP SECRET)
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key

# For Next.js client
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...your-anon-key

# ============================================================================
# STRIPE (Required for payments)
# ============================================================================

# Stripe secret key
STRIPE_SECRET_KEY=sk_test_...

# Webhook secret for /stripe-webhook (transaction events)
STRIPE_WEBHOOK_SECRET=whsec_...

# Webhook secret for /stripe-billing-webhook (subscription events)
STRIPE_BILLING_WEBHOOK_SECRET=whsec_...

# Publishable key for client-side
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# ============================================================================
# PLAID (Optional - for bank connections)
# ============================================================================

PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox  # sandbox, development, or production

# ============================================================================
# EMAIL (Optional - for notifications)
# ============================================================================

RESEND_API_KEY=re_...
FROM_EMAIL=noreply@soledgic.com

# ============================================================================
# SECURITY
# ============================================================================

# Secret for cron job authentication (health checks, cleanup)
CRON_SECRET=your-random-secret-here

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Set to 'development' for local, 'production' for deployed
NODE_ENV=development

# Local development port
PORT=3000
